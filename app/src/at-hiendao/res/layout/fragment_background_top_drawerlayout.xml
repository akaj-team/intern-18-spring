<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgUserBackGroundTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorDarkGray" />

    <ImageView
        android:id="@+id/imgAvatarUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_avatar_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmailDrawerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/drawerlayout_email"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imgAvatarUser" />

    <Button
        android:id="@+id/btnMoreDrawerLayout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_buttom_down_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmailDrawerlayout"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>