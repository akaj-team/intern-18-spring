<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/edMessage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/btnSendChatView"
            android:background="@drawable/bg_ed_message"
            android:hint="Type your message"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btnSendChatView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_send_pink_500_24dp" />

        <TextView
            android:id="@+id/myMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnSendChatView"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_message_green"
            android:text="Hello" />

        <TextView
            android:id="@+id/yourMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/myMessage"
            android:background="@drawable/bg_message_blue"
            android:text="Hi" />

    </RelativeLayout>

</RelativeLayout>
