<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_1dp">

    <Button
        android:id="@+id/btnPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/play" />

    <TextView
        android:id="@+id/tvTimeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlayMusic"
        android:layout_alignParentLeft="true"
        android:text="@string/_00_00" />

    <TextView
        android:id="@+id/tvTimeCountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlayMusic"
        android:layout_alignParentRight="true"
        android:text="@string/_00_00" />

    <SeekBar
        android:id="@+id/seekbarTimeMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlayMusic"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/tvTimeCountDown"
        android:layout_toRightOf="@id/tvTimeCount" />
</RelativeLayout>
