<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnW1View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rectangle_white"
        android:text="W1-View" />

    <Button
        android:id="@+id/btnW1Intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnW1View"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rectangle_white"
        android:text="W1-Intent" />

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnW1Intent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rectangle_white"
        android:text="Fragment" />

</RelativeLayout>