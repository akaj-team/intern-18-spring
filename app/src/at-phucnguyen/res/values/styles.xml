<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:switchMinWidth">20dp</item>
        <item name="android:track">@drawable/custom_switch_track</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:textOn">@string/on</item>
        <item name="android:textOff">@string/off</item>
    </style>

</resources>
