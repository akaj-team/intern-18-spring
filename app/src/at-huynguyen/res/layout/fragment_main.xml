<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="vn.asiantech.internship.MainFragmentActivity">

    <fragment
        android:id="@+id/fragmentEditText"
        android:name="vn.asiantech.internship.EnterTextFragment"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <fragment
        android:id="@+id/fragmentShowText"
        android:name="vn.asiantech.internship.ShowTextFragment"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
